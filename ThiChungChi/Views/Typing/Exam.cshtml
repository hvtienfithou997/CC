@using System.Security.Cryptography
@{
    ViewData["Title"] = "Exam";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    @if (!string.IsNullOrEmpty(ViewBag.ten))
    {
        <h3>Cuộc thi: @ViewBag.ten</h3>
    }
    else
    {
        <h3>Luyện kỹ năng gõ phím</h3>
    }
</div>
<div class="row">
    <div class="col-md-12">
        @if (!string.IsNullOrEmpty(ViewBag.noi_dung))
        {
            <p>@Html.Raw(ViewBag.noi_dung)</p>
        }
    </div>
</div>
<div class="row main-layout">
    <div class="col-sm-12 col-md-12 col-lg-12" id="speedtest-main">

        <span id="config_input_key" value="32" style="display:none;"></span>
        <span id="speedtest_mode" value="" style="display:none;"></span>
        <div id="on-top">
        </div>

        <div class="row d-none" style="margin-bottom: 8px;">
            <div class="col-md-6 col-sm-8 col-xs-12">
                <div class="btn-group" style="margin-left:-12px; margin-right: 20px;"><a href="/login" class="btn btn-primary" role="button">Đăng nhập</a></div>
                <div class="btn-group" style="margin-left:-12px;"><a class="btn btn-md btn-success" href="#" id="switch-typing-test-language">Tiếng Việt <span class="caret"></span></a></div>
                @*<label class="control-label" style="margin-left:7px;font-size:0.9em; font-weight:normal;" for="select01">Switch Typing Test language</label>*@
            </div>
            <div class="col-md-6 col-sm-4 hidden-xs">
                <label class="control-label" style="margin-top: 10px; font-size:0.9em; font-weight:normal;"></label>
            </div>
        </div>

        <div id="reload-box">
            <div id="words" class="row"><div id="row1"></div></div>

            <div id="input-row" class="row">
                <div style="max-width: 620px; margin: auto;">
                    <div style="margin-right: 137px;"><input type="text" class="form-control" id="inputfield" value="" dir="ltr" placeholder="" autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" /></div>
                    <div style="float:right; width: 130px; margin-top: -50px;">
                        <div style="width: 70px; float: left; margin-right: 7px; cursor: pointer; cursor: hand;" id="timer" class="" title="click to show/hide countdown">1:00</div>
                        <div style="width: 50px; float: left; /*margin-top: -5px;*/display: block;">
                        </div>
                    </div>
                    <div style="float:right; padding-right: 58px; padding-top: 5px;">
                        <button type="button" class="btn btn-primary btn-lg d-none" id="reload-btn"><span class="glyphicon glyphicon-refresh">Làm lại</span></button>
                        <button type="button" class="btn btn-primary btn-lg" disabled id="complete-btn" onclick="completeTest()"><span class="">Nộp bài</span></button>
                    </div>
                </div>
            </div>
        </div>

        <div id="inputstream" style="display:none;"></div>
        <div id="wordlist" style="display:none;"></div>
    </div>
</div>

<div id="auswertung-result" class="col-md-12" style="display: block;">
    @if (ViewBag.cuoc_thi != null)
    {
        <input id='cuoc_thi' class="d-none" value="@ViewBag.cuoc_thi">

    }
    @if (ViewBag.tai_khoan != null)
    {
        <input id='tai_khoan' class="d-none" value="@ViewBag.tai_khoan">
    }
    @if (ViewBag.de_thi != null)
    {
        <input id='de_thi' class="d-none" value="@ViewBag.de_thi">
    }
</div>

<script asp-append-version="true" src="~/js/typing.js"></script>
<script asp-append-version="true" src="~/js/speedtest.js"></script>